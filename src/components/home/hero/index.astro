import HeadingOne6xlBoldWhite from "@/atoms/atoms-nandini/headings/one/6xl/bold/white/index.astro"
import Link from "@/atoms/links/index.astro"
import ParagraphLargeWhite from "@/atoms/atoms-nandini/paragraphs/lg/white/index.astro"

// HARDCODED DATA
const data = {

    button_green:"get a free consultation",
    button_transparent_link:"/magento-mobile-app-development/#calculator",
    button_transparent_text:"Get ROI working with us",
    sub_title:"We go beyond simply building sites, we create online experiences that convert. From development & design to marketing & CRO â€“ ",
