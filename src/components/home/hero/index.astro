                <div class="flex justify-center">
                    <ButtonGreenLarge>{ data.button_green }</ButtonGreenLarge>
                </div>
                <div class="flex justify-center">
                    <Link aria_label={ data.button_transparent_text } href={ data.button_transparent_link }>
                        <ButtonTransparent>{ data.button_transparent_text }</ButtonTransparent>
                    </Link>
                </div>
            </div>
        </div>
    </Container>
</section>
