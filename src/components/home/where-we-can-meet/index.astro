---

// IMPORT ASTRO LAYOUTS
import ContainerSmall from "@/layouts/container-small/index.astro"

// IMPORT ASTRO ATOMS
import HeadingTwo8XlGray from "@/atoms/atoms-shiva/headings/two/8xl/bold/center/gray/index.astro"
import Paragraph2XlWhite from "@/atoms/atoms-shiva/paragraphs/2xl/center/white/index.astro"
import PictureContain from "@/atoms/picture/internal/contain/index.astro"

// HARDCODED DATA
const data = {

    title: "Where we can meet",

}
const location = {

    icon: "/icons/where-we-meet-pin.svg",
    location_one: "USA Austin, Texas",
    location_two: "Netherlands Amsterdam",

}
 
---

<section class="bg-dark-gray py-16">
    <ContainerSmall>
        <div class="relative flex flex-col items-center justify-center">
            <div class="lg:absolute top-[40%] ">
                <HeadingTwo8XlGray>{ data.title }</HeadingTwo8XlGray>
            </div>
            <div class="w-full aspect-video">
                <PictureContain
                    alternative_text=""
                    source="/images/where-bg.webp"
                />
            </div>
            <div class="flex flex-col md:flex-row items-center gap-4 absolute top-1/3 left-1/2">
                <div class="size-6">
                    <PictureContain
                        alternative_text=""
                        source={ location.icon }
                    />
                </div>
                <Paragraph2XlWhite>{ location.location_two }</Paragraph2XlWhite>
            </div>
            <div class="flex flex-col-reverse md:flex-row items-center gap-4 absolute top-[55%] left-[5%]">
                <Paragraph2XlWhite>{ location.location_one }</Paragraph2XlWhite>
                <div class="size-6">
                    <PictureContain
                        alternative_text=""
                        source={ location.icon }
                    />
                </div>
            </div>
        </div>
    </ContainerSmall>
</section>
